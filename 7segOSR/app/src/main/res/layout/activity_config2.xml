<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.example.komaki.a7segosr.ConfigActivity2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="利用者名"
            android:textSize="10pt"
            android:gravity="center"/>
        <EditText
            android:id="@+id/name"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="山田太朗"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="10pt"
            android:layout_marginBottom="5dp"
            android:text="器具の数値のサイズ" />

        <TextView
            android:background="@drawable/text_border"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:id="@+id/sizeRect"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <SeekBar
            android:id="@+id/sizeBar"
            android:layout_gravity="center"
            android:max="10"
            android:progress="5"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="20dp"
            android:textSize="10pt"
            android:text="言語"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Spinner
            android:id="@+id/lang"
            android:spinnerMode="dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="10pt"
            android:text="単位"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Spinner
            android:id="@+id/unit"
            android:spinnerMode="dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="記録する周期(秒)"
            android:textSize="10pt"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <EditText
            android:inputType="number"
            android:id="@+id/period"
            android:focusable="false"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <TextView
            android:text="文字の傾き（自動取得）"
            android:textSize="10pt"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <EditText
                android:text=""
                android:id="@+id/collectNumber"
                android:textSize="10pt"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/autoGetRotate"
                android:textSize="10pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取得する"/>
        </LinearLayout>


        <TextView
            android:text="文字の傾き（手動）"
            android:textSize="10pt"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <SeekBar
            android:id="@+id/offset"
            android:layout_gravity="center"
            android:max="20"
            android:progress="10"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/kettei"
            android:textSize="10pt"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="決定"/>
    </LinearLayout>
</ScrollView>
