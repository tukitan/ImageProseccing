<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.komaki.a7segosr.ConfigActivity">

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="384dp"
        android:layout_height="252dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <SeekBar
        android:id="@+id/binalyVal"
        android:max="120"
        android:progress="60"
        android:layout_width="315dp"
        android:layout_height="46dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <SeekBar
        android:id="@+id/bokasiVal"
        android:max="63"
        android:progress="31"
        android:layout_width="315dp"
        android:layout_height="46dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="文字と背景の境界値（デフォルト：60）"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/surfaceView"
        app:layout_constraintHorizontal_bias="0.377" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="文字のぼかし度（デフォルト：31）"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/binalyVal"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="133dp"
        android:layout_height="50dp"
        android:text="保存"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/bokasiVal" />

    <Button
        android:id="@+id/testButton"
        android:layout_width="133dp"
        android:layout_height="50dp"
        android:text="テスト"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/bokasiVal" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="リセット"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/bokasiVal"
        app:layout_constraintLeft_toRightOf="@+id/testButton"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/saveButton"
        android:layout_marginRight="8dp" />


</android.support.constraint.ConstraintLayout>
