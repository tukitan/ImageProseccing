<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.komaki.a7segosr.DropboxLauncher">

    <Button
        android:id="@+id/upConfig"
        android:layout_width="wrap_content"
        android:layout_height="83dp"
        android:text="設定ファイルをアップロード"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="58dp" />

    <Button
        android:id="@+id/downConfig"
        android:layout_width="wrap_content"
        android:layout_height="83dp"
        android:text="設定ファイルをダウンロード"
        android:layout_marginTop="42dp"
        app:layout_constraintTop_toBottomOf="@+id/upConfig"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/upData"
        android:layout_width="wrap_content"
        android:layout_height="83dp"
        android:text="実験記録をアップロード"
        android:layout_marginTop="42dp"
        app:layout_constraintTop_toBottomOf="@+id/downConfig"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
