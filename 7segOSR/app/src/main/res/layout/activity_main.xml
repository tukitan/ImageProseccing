<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8BBD0"
    tools:context="com.example.komaki.a7segosr.MainActivity">
    <Button
        android:id="@+id/start"
        android:layout_width="366dp"
        android:layout_height="115dp"
        android:text="StartCheckRecognize"
        tools:layout_editor_absoluteX="9dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="136dp" />


    <Button
        android:id="@+id/howto"
        android:layout_width="366dp"
        android:layout_height="115dp"
        android:layout_below="@id/start"
        android:text="使い方"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/start" />

    <Button
        android:id="@+id/cameraTest"
        android:layout_width="366dp"
        android:layout_height="115dp"
        android:layout_below="@id/start"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="CAMERA TEST"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/howto" />

    <ImageButton
        android:id="@+id/config"
        android:layout_width="97dp"
        android:layout_height="92dp"
        app:srcCompat="@drawable/config"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="160dp"
        android:layout_height="144dp"
        app:srcCompat="@drawable/question"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="3dp" />


</android.support.constraint.ConstraintLayout>
